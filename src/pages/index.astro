---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard';
import SkillsCard from '../components/SkillsCard'
import Hero from '../components/Hero'
import './index.css'
import ProjectItem from '../components/ProjectItem';
---

<Layout title="htrowii's website">
	<main class="grid-container">
		<div id="Hero-wrapper">
			<Hero client:load/>
		</div>
		<div class="main-content">
			<div class="tophalf">
				<ProjectItem client:load id="item1" title="hnr2024" repo="hrtowii/hnr2024" />
				<ProjectItem client:load id="item2" title="KFDFontOverwrite" repo="hrtowii/WDBFontOverwrite" />
				<div id="item3" class="transparentitem">
					<div class="item-content">
					 	<h3>Projects</h3>
					</div>
				</div>
				<ProjectItem client:load id="item4" title="yt2mp3" repo="hrtowii/telegram_yt2mp3" />
				<ProjectItem client:load id="item5" title="Coffier" repo="hrtowii/hnr2023" />
				<ProjectItem client:load id="item6" title="Serotonin" repo="mineek/Serotonin" />
				<div id="item7" class="item">
					<div class="item-content">
						<h4>Heartfelt</h4>
					</div>
				</div>
				<ProjectItem client:load id="item8" title="img2epub" repo="hrtowii/telegram_img2epub" />
				<ProjectItem client:load id="item9" title="SpotifyEQ-iOS" repo="hrtowii/SpotifyEQ-iOS" />
			</div>
			<div class="bottomhalf">
				<div class="one-third">
					<BlogCard/>
				</div>
				<div class="two-thirds">
					<SkillsCard/>
				</div>
			</div>
		</div>
	</main>
</Layout>